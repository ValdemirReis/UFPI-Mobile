<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fundo_home"
    tools:context="ufpi.br.ufpimobile.TelaHome">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:useDefaultMargins="true">


        <ImageButton
            android:id="@+id/im_noticias"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:src="@mipmap/noticias2" />

        <ImageButton
            android:id="@+id/im_evento"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:src="@mipmap/eventos2" />

        <ImageButton
            android:id="@+id/im_mapa"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:src="@mipmap/mapa2" />

        <ImageButton
            android:id="@+id/im_restaurante"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@mipmap/restaurante2" />

        <ImageButton
            android:id="@+id/im_contatos"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@mipmap/contatos2" />

        <ImageButton
            android:id="@+id/im_calendario"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@mipmap/calendario2" />

        <ImageButton
            android:id="@+id/im_sobre"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@mipmap/sobre2" />

        <ImageButton
            android:id="@+id/im_radio"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@mipmap/radio2" />


        <ImageButton
            android:id="@+id/im_sigaa"
            android:layout_width="110dp"
            android:layout_height="122dp"
            android:layout_column="2"
            android:layout_row="2"
            android:src="@mipmap/sigaa2" />


    </GridLayout>

