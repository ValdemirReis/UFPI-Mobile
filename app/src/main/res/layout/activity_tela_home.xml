<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="ufpi.br.ufpimobile.TelaHome">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:useDefaultMargins="true">


        <ImageButton
            android:id="@+id/im_noticias"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@mipmap/noticias4"
            android:background="@drawable/style_botton"/>

        <ImageButton
            android:id="@+id/im_evento"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@mipmap/eventos4"
            android:background="@drawable/style_botton"/>

        <ImageButton
            android:id="@+id/im_mapa"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@mipmap/mapa4"
            android:background="@drawable/style_botton"/>

        <ImageButton
            android:id="@+id/im_restaurante"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@mipmap/restaurante4"
            android:background="@drawable/style_botton"/>

        <ImageButton
            android:id="@+id/im_contatos"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@mipmap/contatos4"
            android:background="@drawable/style_botton"
            />

        <ImageButton
            android:id="@+id/im_calendario"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@mipmap/calendario4"
            android:background="@drawable/style_botton"/>

        <ImageButton
            android:id="@+id/im_sobre"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@mipmap/sobre4"
            android:background="@drawable/style_botton"/>

        <ImageButton
            android:id="@+id/im_radio"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@mipmap/radio4"
            android:background="@drawable/style_botton"/>


        <ImageButton
            android:id="@+id/im_sigaa"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_row="2"
            android:src="@mipmap/sigaa4"
            android:background="@drawable/style_botton"/>

        <ImageButton
            android:id="@+id/im_manual"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_row="3"
            android:src="@mipmap/manual4"
            android:background="@drawable/style_botton"/>


    </GridLayout>


</RelativeLayout>
