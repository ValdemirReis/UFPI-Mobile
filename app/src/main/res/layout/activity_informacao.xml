<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ufpi.br.ufpimobile.Informacao">

    <include
        android:id="@+id/toolbar_Informacao"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sic"
            android:text="Serviço de Informação ao Cidadão"
            android:textColor="#fff"
            android:background="@drawable/style_botton2"
            android:textSize="16sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dadosAbertos"
            android:text="Dados Abertos"
            android:background="@drawable/style_botton2"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            />



    </LinearLayout>

</LinearLayout>





